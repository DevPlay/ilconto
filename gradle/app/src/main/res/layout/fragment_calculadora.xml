<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF3E0"
    tools:context="com.prueba.principales.ilconto.calculadora">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        app:srcCompat="@color/Barra_estado"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="50sp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="    Calcula tu cuenta..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:typeface="normal"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/log96"
        android:layout_below="@+id/comensales2"
        android:id="@+id/imageView7"
        android:layout_alignStart="@+id/comensales2"
        android:layout_alignEnd="@+id/comensales2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/porce"
        android:id="@+id/imageView8"
        android:layout_alignEnd="@+id/propina2"
        android:layout_below="@+id/propina2"
        android:layout_alignStart="@+id/propina2"
        android:layout_alignBottom="@+id/imageView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pes96"
        android:id="@+id/imageView6"
        android:layout_alignStart="@+id/saldo1"
        android:layout_alignEnd="@+id/saldo1"
        android:layout_alignBottom="@+id/imageView7" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="65dp"
        android:id="@+id/saldo1"
        android:hint="Saldo"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/imageView2"
        android:layout_toStartOf="@+id/comensales2"
        android:textAlignment="center"
        android:layout_width="90sp"
        android:textSize="16sp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/comensales2"
        android:layout_alignBaseline="@+id/saldo1"
        android:layout_alignBottom="@+id/saldo1"
        android:layout_centerHorizontal="true"
        android:hint="Comensales"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_width="90sp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/propina2"
        android:hint="Propina"
        android:layout_marginStart="24dp"
        android:layout_alignBaseline="@+id/comensales2"
        android:layout_alignBottom="@+id/comensales2"
        android:layout_toEndOf="@+id/comensales2"
        android:textAlignment="center"
        android:layout_width="90sp"
        android:textSize="16sp" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:id="@+id/calcu_btn"
        android:onClick="suma"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView8" />

</RelativeLayout>
